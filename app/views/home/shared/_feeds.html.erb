<% @FeedCourses.each do |c| %>
    <div class="bg-white border p-2 rounded-md mb-2">
        <h2 class="font-bold" >
            <%= c.title %>
        </h2>
        <!-- Courses-->
        <div class="border rounded-md mt-2">
            <div class="p-2">
                <%= link_to course_path(c), class:"hover:text-black text-black no-underline" do %>
              <%= truncate(strip_tags(c.content.to_s.html_safe), length: 500) %>
              <span class="bg-blue-300 rounded-md" id=start-reading><i class="mx-2">Continuez la lecture ...</i></span>
            <% end %>
            </div>
            <!-- Feed Bar-->
            <%= render "home/shared/feeds_bar" %>
        </div>
        <!-- Exercises -->
        <div class="border rounded-md mt-2">
            <div class="p-2">
            <p class="font-bold text-md "> Commencez les exercices</p>
               
            </div>
            <!-- Exercise Bar -->
            <div class="border-top flex items-center p-2">
                <span>500 Eleves</span>
                <span> Traiter</span>
            </div>
        </div>
    </div>
<% end %> 